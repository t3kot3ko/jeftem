- model_class = TestCase
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:title)
      %th= model_class.human_attribute_name(:step)
      %th= model_class.human_attribute_name(:precondition)
      %th= model_class.human_attribute_name(:postcondition)
      %th= model_class.human_attribute_name(:expected_result)
      %th= model_class.human_attribute_name(:identifier)
      %th= model_class.human_attribute_name(:description)
      %th= model_class.human_attribute_name(:summary)
      %th= model_class.human_attribute_name(:section_id)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @test_cases.each do |test_case|
      %tr
        %td= link_to test_case.id, test_case_path(test_case)
        %td= test_case.title
        %td= test_case.step
        %td= test_case.precondition
        %td= test_case.postcondition
        %td= test_case.expected_result
        %td= test_case.identifier
        %td= test_case.description
        %td= test_case.summary
        %td= test_case.section_id
        %td=l test_case.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_test_case_path(test_case), :class => 'btn btn-default btn-xs'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), test_case_path(test_case), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_test_case_path, :class => 'btn btn-primary'
