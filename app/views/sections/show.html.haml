- model_class = Section
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @section.name
%p
  %strong= model_class.human_attribute_name(:project_id) + ':'
  %br
  = @section.project_id


= link_to t('.back', :default => t("helpers.links.back")), sections_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_section_path(@section), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), section_path(@section), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
