= form_for @test_result_type do |f|
  - if @test_result_type.errors.any?
    #error_explanation
      %h2= "#{pluralize(@test_result_type.errors.count, "error")} prohibited this test_result_type from being saved:"
      %ul
        - @test_result_type.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :color
    = f.text_field :color
  .actions
    = f.submit 'Save'
